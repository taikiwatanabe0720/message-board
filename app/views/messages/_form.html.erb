<%= form_for(@message) do |f| %>

  
<% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
<% end %>


<div class="form-group">
  <label for="message_name">名前:</label>
  <%= f.text_field :name, class: 'form-control', placeholder: 'Entername' %>
</div>

<div class="form-group">
  <label for="message_body">内容:</label>
  <%= f.text_area :body, class: 'form-control', placeholder: 'Entercontents' %>
</div>

<div class="form-group">
<%= f.submit class: "btn btn-sm btn-primary" %>
</div>

<% end %>